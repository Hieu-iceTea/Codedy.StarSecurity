extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'nav-fixed'
    - var pageTitle = 'Tooltips'
    - var pageIcon = 'help-circle'
    - var pageSummary = 'Animted tooltips to provide annotation on content when hovered over'
    - var sidenavStyle = 'sidenav-light'
    - var topnavStyle = 'navbar-light bg-white'
    - var pageHeaderStyle = 'page-header-dark'
    - var pageHeaderBackground = 'bg-gradient-primary-to-secondary'
    - var footerStyle = 'footer-light'

block content
    include includes/page-header
    .container-fluid.mt-n10
        .row
            .col-lg-9

                //- Default Bootstrap Tooltips
                #tooltips
                    .card.mb-4
                        .card-header Default Bootstrap Tooltips
                        .card-body
                            //- Component Preview
                            .sbp-preview
                                .sbp-preview-content
                                    button.btn.btn-primary.mr-2(type='button', data-toggle='tooltip', data-placement='top', title='Tooltip on top')
                                        | Tooltip on top
                                    button.btn.btn-primary.mr-2(type='button', data-toggle='tooltip', data-placement='right', title='Tooltip on right')
                                        | Tooltip on right
                                    button.btn.btn-primary.mr-2(type='button', data-toggle='tooltip', data-placement='bottom', title='Tooltip on bottom')
                                        | Tooltip on bottom
                                    button.btn.btn-primary.mr-2(type='button', data-toggle='tooltip', data-placement='left', title='Tooltip on left')
                                        | Tooltip on left

                                .sbp-preview-code
                                    // Code sample
                                    ul#tooltipsExampleTabs.nav.nav-tabs(role='tablist')
                                        li.nav-item
                                            a#tooltipsExampleHtmlTab.nav-link.active.mr-1(data-toggle='tab', href='#tooltipsExampleHtml', role='tab', aria-controls='tooltipsExampleHtml', aria-selected='true')
                                                i.fab.fa-html5.text-orange.mr-1
                                                | HTML
                                        li.nav-item
                                            a#tooltipsExamplePugTab.nav-link(data-toggle='tab', href='#tooltipsExamplePug', role='tab', aria-controls='tooltipsExamplePug', aria-selected='false')
                                                img.img-pug.mr-1(src='assets/img/pug.svg')
                                                | PUG
                                    // Tab panes
                                    .tab-content
                                        #tooltipsExampleHtml.tab-pane.active(role='tabpanel', aria-labelledby='tooltipsExampleHtmlTab')
                                            pre.language-markup
                                                code.
                                                    <script type="text/plain"><button class="btn btn-primary" type="button" data-toggle="tooltip" data-placement="top" title="" data-original-title="Tooltip on top">Tooltip on top</button>

                                                    <button class="btn btn-primary" type="button" data-toggle="tooltip" data-placement="right" title="" data-original-title="Tooltip on right">Tooltip on right</button>

                                                    <button class="btn btn-primary" type="button" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Tooltip on bottom">Tooltip on bottom</button>

                                                    <button class="btn btn-primary" type="button" data-toggle="tooltip" data-placement="left" title="" data-original-title="Tooltip on left">Tooltip on left</button></script>
                                        #tooltipsExamplePug.tab-pane(role='tabpanel', aria-labelledby='tooltipsExamplePugTab')
                                            pre.language-pug
                                                code.
                                                    button.btn.btn-primary(type='button', data-toggle='tooltip', data-placement='top', title='Tooltip on top')
                                                        | Tooltip on top

                                                    button.btn.btn-primary(type='button', data-toggle='tooltip', data-placement='right', title='Tooltip on right')
                                                        | Tooltip on right

                                                    button.btn.btn-primary(type='button', data-toggle='tooltip', data-placement='bottom', title='Tooltip on bottom')
                                                        | Tooltip on bottom

                                                    button.btn.btn-primary(type='button', data-toggle='tooltip', data-placement='left', title='Tooltip on left')
                                                        | Tooltip on left
                                .sbp-preview-text.
                                    <p>Tooltips are visible when an element is hovered over.</p>
                                    By default, using tooltips via data attributes is enabled globally within the SB Admin Pro theme. You can change this default by modifying the <code>js/scripts.js</code> file.

                //- Default Bootstrap Popovers
                #popovers
                    .card.mb-4
                        .card-header Default Bootstrap Popovers
                        .card-body
                            //- Component Preview
                            .sbp-preview
                                .sbp-preview-content
                                    a.btn.btn-primary.mr-2(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='top', data-content='This popover is on the top!')
                                        | Popover on top
                                    a.btn.btn-primary.mr-2(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='right', data-content='This popover is on the right!')
                                        | Popover on right
                                    a.btn.btn-primary.mr-2(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='bottom', data-content='This popover is on the bottom!')
                                        | Popover on bottom
                                    a.btn.btn-primary.mr-2(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='left', data-content='This popover is on the left!')
                                        | Popover on left

                                .sbp-preview-code
                                    // Code sample
                                    ul#componentNameTabs.nav.nav-tabs(role='tablist')
                                        li.nav-item
                                            a#componentNameHtmlTab.nav-link.active.mr-1(data-toggle='tab', href='#componentNameHtml', role='tab', aria-controls='componentNameHtml', aria-selected='true')
                                                i.fab.fa-html5.text-orange.mr-1
                                                | HTML
                                        li.nav-item
                                            a#componentNamePugTab.nav-link(data-toggle='tab', href='#componentNamePug', role='tab', aria-controls='componentNamePug', aria-selected='false')
                                                img.img-pug.mr-1(src='assets/img/pug.svg')
                                                | PUG
                                    // Tab panes
                                    .tab-content
                                        #componentNameHtml.tab-pane.active(role='tabpanel', aria-labelledby='componentNameHtmlTab')
                                            pre.language-markup
                                                code.
                                                    <script type="text/plain"><a class="btn btn-primary" href="javascript:void(0);" tabindex="0" data-trigger="focus" title="" data-container="body" data-toggle="popover" data-placement="top" data-content="This popover is on the top!" data-original-title="Popover Title">Popover on top</a>

                                                    <a class="btn btn-primary" href="javascript:void(0);" tabindex="0" data-trigger="focus" title="" data-container="body" data-toggle="popover" data-placement="right" data-content="This popover is on the right!" data-original-title="Popover Title">Popover on right</a>

                                                    <a class="btn btn-primary" href="javascript:void(0);" tabindex="0" data-trigger="focus" title="" data-container="body" data-toggle="popover" data-placement="bottom" data-content="This popover is on the bottom!" data-original-title="Popover Title">Popover on bottom</a>

                                                    <a class="btn btn-primary" href="javascript:void(0);" tabindex="0" data-trigger="focus" title="" data-container="body" data-toggle="popover" data-placement="left" data-content="This popover is on the left!" data-original-title="Popover Title">Popover on left</a></script>
                                        #componentNamePug.tab-pane(role='tabpanel', aria-labelledby='componentNamePugTab')
                                            pre.language-pug
                                                code.
                                                    a.btn.btn-primary(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='top', data-content='This popover is on the top!')
                                                        | Popover on top

                                                    a.btn.btn-primary(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='right', data-content='This popover is on the right!')
                                                        | Popover on right

                                                    a.btn.btn-primary(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='bottom', data-content='This popover is on the bottom!')
                                                        | Popover on bottom

                                                    a.btn.btn-primary(href='javascript:void(0);', tabindex='0', data-trigger='focus', title='Popover Title', data-container='body', data-toggle='popover', data-placement='left', data-content='This popover is on the left!')
                                                        | Popover on left
                                .sbp-preview-text.
                                    <p>Popovers are visible when an element is clicked, or focused.</p>
                                    By default, using popovers via data attributes is enabled globally within the SB Admin Pro theme. You can change this default by modifying the <code>js/scripts.js</code> file. The above popovers are dismissable on the user's next click. You can disable this functionality in the <code>js/scripts.js</code> file as well.

                //- Bootstrap Docs Link
                .card.card-icon.mb-4
                    .row.no-gutters
                        .col-auto.card-icon-aside.bg-secondary
                            i.mr-1.text-white-50.fab.fa-bootstrap
                        .col
                            .card-body.py-5
                                h5.card-title Bootstrap Documentation Available
                                p.card-text
                                    | Tooltips and popovers are default components included with the Bootstrap framework. For more information on implementing, modifying, and extending the usage of tooltips and popovers within your project, visit the official Bootstrap documentation.
                                a.btn.btn-secondary.btn-sm.mr-2(href='https://getbootstrap.com/docs/4.4/components/tooltips/', target='_blank')
                                    i.mr-1(data-feather='external-link')
                                    | Visit Bootstrap Tooltips Docs
                                a.btn.btn-secondary.btn-sm.mr-2(href='https://getbootstrap.com/docs/4.4/components/popovers/', target='_blank')
                                    i.mr-1(data-feather='external-link')
                                    | Visit Bootstrap Popovers Docs

            //- Sticky Navigation
            .col-lg-3
                .nav-sticky
                    .card
                        .card-body
                            ul.nav.flex-column#stickyNav
                                li.nav-item
                                    a.nav-link(href='#tooltips') Tooltips
                                li.nav-item
                                    a.nav-link(href='#popovers') Popovers

append scripts
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/components/prism-core.min.js', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/plugins/autoloader/prism-autoloader.min.js', crossorigin='anonymous')
