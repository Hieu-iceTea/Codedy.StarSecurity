extends ../layouts/dashboard.pug

block config
    - var pageTitle = 'Static Navigation'
    - var pageIcon = 'layout';
    - var pageSummary = 'Remove the fixed layout class from the body element for a scrollable, static layout option';
    - var sidenavStyle = 'sidenav-light'
    - var topnavStyle = 'navbar-light bg-white'
    - var pageHeaderStyle = 'page-header-dark'
    - var pageHeaderBackground = 'bg-gradient-primary-to-secondary'
    - var footerStyle = 'footer-light'

block content
    include includes/page-header
    .container-fluid.mt-n10

        .card.mb-4
            .card-header Static Navigation Example
            .card-body
                p.mb-0.
                    This page is an example of using static navigation. By removing the <code>.nav-fixed</code> class from the <code>body</code> tag, the top navigation and side navigation will remain static in their positioning.

        .text-center.text-muted.font-italic.small
            | Scroll down to see example...
            .mt-2
                i.far.fa-arrow-alt-circle-down.fa-3x.text-gray-400

        div(style='height: 100vh;')
