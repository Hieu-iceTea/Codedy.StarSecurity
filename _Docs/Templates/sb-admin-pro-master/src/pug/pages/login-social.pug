extends ../layouts/authentication.pug

block config
    - var pageTitle = 'Login'
    - var footerStyle = "footer-dark"

block content
    .container
        .row.justify-content-center
            .col-xl-5.col-lg-6.col-md-8.col-sm-11
                .card.my-5
                    .card-body.p-5.text-center
                        .h3.font-weight-light.mb-3 Sign In
                        a.btn.btn-icon.btn-facebook.mx-1(href='javascript:void(0);')
                            i.fab.fa-facebook-f.fa-fw.fa-sm
                        a.btn.btn-icon.btn-github.mx-1(href='javascript:void(0);')
                            i.fab.fa-github.fa-fw.fa-sm
                        a.btn.btn-icon.btn-google.mx-1(href='javascript:void(0);')
                            i.fab.fa-google.fa-fw.fa-sm
                        a.btn.btn-icon.btn-twitter.mx-1(href='javascript:void(0);')
                            i.fab.fa-twitter.fa-fw.fa-sm
                    hr.my-0
                    .card-body.p-5
                        form
                            .form-group
                                label.text-gray-600.small(for='emailExample') Email address
                                input.form-control.form-control-solid.py-4(type='text', placeholder='', aria-label='Email Address', aria-describedby='emailExample')
                            .form-group
                                label.text-gray-600.small(for='passwordExample') Password
                                input.form-control.form-control-solid.py-4(type='password', placeholder='', aria-label='Password', aria-describedby='passwordExample')
                            .form-group
                                a.small(href='password-social.html') Forgot your password?
                            .form-group.d-flex.align-items-center.justify-content-between.mb-0
                                .custom-control.custom-control-solid.custom-checkbox
                                    input#customCheck1.custom-control-input.small(type='checkbox')
                                    label.custom-control-label(for='customCheck1') Remember password
                                a.btn.btn-primary(href='index.html') Login
                    hr.my-0
                    .card-body.px-5.py-4
                        .small.text-center
                            | New user? 
                            a(href="register-social.html") Create an account!
