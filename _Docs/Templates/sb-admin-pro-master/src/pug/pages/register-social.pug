extends ../layouts/authentication.pug

block config
    - var pageTitle = 'Register'
    - var footerStyle = "footer-dark"

block content
    .container
        .row.justify-content-center
            // Register Form
            .col-xl-8.col-lg-9
                .card.my-5
                    .card-body.p-5.text-center
                        .h3.font-weight-light.mb-3 Create an Account
                        .small.text-muted.mb-2 Sign in using...
                        a.btn.btn-icon.btn-facebook.mx-1(href='javascript:void(0);')
                            i.fab.fa-facebook-f.fa-fw.fa-sm
                        a.btn.btn-icon.btn-github.mx-1(href='javascript:void(0);')
                            i.fab.fa-github.fa-fw.fa-sm
                        a.btn.btn-icon.btn-google.mx-1(href='javascript:void(0);')
                            i.fab.fa-google.fa-fw.fa-sm
                        a.btn.btn-icon.btn-twitter.mx-1(href='javascript:void(0);')
                            i.fab.fa-twitter.fa-fw.fa-sm
                    hr.my-0
                    .card-body.p-5
                        .text-center.small.text-muted.mb-4 ...or enter your information below.
                        form
                            .form-row
                                .col-md-6
                                    .form-group
                                        label.text-gray-600.small(for='firstNameExample') First name
                                        input.form-control.form-control-solid.py-4(type='text', placeholder='', aria-label='First Name', aria-describedby='firstNameExample')
                                .col-md-6
                                    .form-group
                                        label.text-gray-600.small(for='lastNameExample') Last name
                                        input.form-control.form-control-solid.py-4(type='text', placeholder='', aria-label='Last Name', aria-describedby='lastNameExample')
                            .form-group
                                label.text-gray-600.small(for='emailExample') Email address
                                input.form-control.form-control-solid.py-4(type='text', placeholder='', aria-label='Email Address', aria-describedby='emailExample')
                            .form-row
                                .col-md-6
                                    .form-group
                                        label.text-gray-600.small(for='passwordExample') Password
                                        input.form-control.form-control-solid.py-4(type='password', placeholder='', aria-label='Password', aria-describedby='passwordExample')
                                .col-md-6
                                    .form-group
                                        label.text-gray-600.small(for='confirmPasswordExample') Confirm Password
                                        input.form-control.form-control-solid.py-4(type='password', placeholder='', aria-label='Confirm Password', aria-describedby='confirmPasswordExample')
                            .form-group.d-flex.align-items-center.justify-content-between
                                .custom-control.custom-control-solid.custom-checkbox
                                    input#customCheck1.custom-control-input.small(type='checkbox')
                                    label.custom-control-label.mr-3(for='customCheck1')
                                        | I accept the 
                                        a(href='javascript:void(0);') terms &amp; conditions
                                        | .
                                a.btn.btn-primary(href='login-social.html') Create Account
                    hr.my-0
                    .card-body.px-5.py-4
                        .small.text-center
                            | Have an account? 
                            a(href="login-social.html") Sign in!
