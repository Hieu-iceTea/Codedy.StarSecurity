extends ../layouts/authentication.pug

block config
    - var pageTitle = 'Forgot Password'
    - var footerStyle = "footer-dark"

block content
    .container
        .row.justify-content-center
            .col-xl-5.col-lg-6.col-md-8.col-sm-11
                .card.my-5
                    .card-body.p-5.text-center
                        .h3.font-weight-light.mb-0 Password Recovery
                    hr.my-0
                    .card-body.p-5
                        .text-center.small.text-muted.mb-4 Enter your email address below and we will send you a link to reset your password.
                        form
                            .form-group
                                label.text-gray-600.small(for='emailExample') Email address
                                input.form-control.form-control-solid.py-4(type='text', placeholder='', aria-label='Email Address', aria-describedby='emailExample')
                            .form-group.mb-0
                                a.btn.btn-primary(href='login-social.html') Reset Password
                    hr.my-0
                    .card-body.px-5.py-4
                        .small.text-center
                            | New user? 
                            a(href="register-social.html") Create an account!
