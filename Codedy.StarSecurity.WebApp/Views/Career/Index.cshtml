@model IEnumerable<Codedy.StarSecurity.WebApp.Models.Database.Entities.Career>

@{
    ViewData["Title"] = "Career";
}



<div class="page-title-area page-title-style-two">
    <div class="container">
        <div class="page-title-content">
            <h2 style="color: white">Career</h2>
            <ul>
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bx bx-home"></i>
                        Home
                    </a>
                </li>
                <li class="active">Career</li>
            </ul>
        </div>
    </div>
</div>


<section class="blog-column-two-area ptb-100">
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-md-6">
                    <div class="single-blog-posts">
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <img src="~/assets/img/career/@item.Image" alt="Image" style="height:25rem">
                        </a>

                        <div class="single-blog-content">
                            <span>@Html.DisplayFor(modelItem => item.WorkAddress)</span>
                            <h3>
                                <a asp-action="Details" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </a>
                            </h3>
                            <p>
                                @if (item.Description.Length < 200)
                                {
                                    @(item.Description)
                                }
                                else
                                {
                                    @(item.Description.Substring(0, 200) + " ...")
                                }
                            </p>
                            <ul class="admin">
                                <li>
                                    <a href="#">
                                        <i class="bx bx-user-circle"></i>
                                        Posted by: @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </a>
                                </li>
                                <li class="float">
                                    <i class="bx bx-calendar-alt"></i>
                                    @item.ExpirationDate.ToString("MMMM dd, yyyy", new System.Globalization.CultureInfo("en-us"))
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            }


            <div class="col-lg-12">
                <div class="pagination-area">

                    <span class="page-numbers current" aria-current="page">1</span>
                    <a href="#" class="page-numbers">2</a>
                    <a href="#" class="page-numbers">3</a>
                    <a href="#" class="next page-numbers">
                        <i class="bx bx-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
