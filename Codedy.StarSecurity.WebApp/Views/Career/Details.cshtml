

@model CarrerModel

@{
    ViewData["Title"] = "Career Detail";
}


<div class="blog-details-area ptb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog-details-content">
                    <div class="blog-details-img">
                        <img src="~/assets/img/career/@Model.Career.Image" alt="Image">
                    </div>
                    <div class="blog-top-content">
                        <div class="news-content">
                            <ul class="admin">
                                <li>
                                    <a href="#">
                                        <i class="bx bx-user-circle"></i>
                                        Posted by: @Html.DisplayFor(modelItem => Model.Career.CreatedBy)
                                    </a>
                                </li>
                                <li class="float">
                                    <i class="bx bx-calendar-alt"></i>
                                    Expiration Date: @Model.Career.ExpirationDate.ToString("MMMM dd, yyyy", new System.Globalization.CultureInfo("en-us"))
                                </li>
                            </ul>
                            <div class="btnShare">
                                <!-- Your share button code -->
                                <div class="fb-share-button" style="float: left"
                                     data-href="window.location.href"
                                     data-layout="button_count">
                                </div>

                            </div>
                            <h3>@Html.DisplayFor(modelItem => Model.Career.Title)</h3>

                            <p>
                                <b> Work Address: </b>
                                @Html.DisplayFor(modelItem => Model.Career.WorkAddress)
                            </p>
                            <p>
                                <b> Salary: </b>
                                @Html.DisplayFor(modelItem => Model.Career.Salary)
                            </p>

                        </div>

                        <div class="news-content">
                            <p class="my-3"><b>Description:</b></p>

                            <div>
                                @Html.DisplayFor(modelItem => Model.Career.Description)
                            </div>
                            <div class="row mt-5">
                                <a asp-controller="Recruitment" asp-action="Index" asp-route-id="@Model.Career.Id" class="default-btn">
                                    <span>Leave information</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-lg-4 mt-5">
                <div class="widget-sidebar">
                    <div class="sidebar-widget recent-post">
                        <h3 class="widget-title">Recent Post</h3>
                        <ul>
                            @foreach (var item in Model.Careers.Take(5))
                            {
                                @if (item.Id != Model.Career.Id)
                                {
                                    <li>
                                        <a asp-action="Details" asp-route-id="@item.Id">
                                            @Html.DisplayFor(modelItem => item.Title)
                                            <img style="height: auto; width: 75px;" src="~/assets/img/career/@item.Image" alt="Image">
                                        </a>
                                        <span>@Convert.ToDateTime(item.ExpirationDate).ToString("MMMM dd, yyyy", new System.Globalization.CultureInfo("en-us"))</span>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    @*<div class="services-sidebar">

                        <div class="services-contact mb-30">
                            <h3>You want to apply for this position?</h3>
                            <a asp-controller="Recruitment" asp-action="Index" asp-route-id="@Model.Career.Id" class="default-btn">
                                <span>Leave information</span>
                            </a>
                        </div>
                    </div>*@
                </div>
            </div>
        </div>
    </div>
</div>