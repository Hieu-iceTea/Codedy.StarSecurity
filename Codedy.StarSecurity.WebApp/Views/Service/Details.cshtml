

@model ServiceModel

@{
    ViewData["Title"] = "Service Detail";
}


<div class="page-title-area page-title-style-two"  style="background-image: url('/assets/img/police-1.jpg');     background-position: center;
    background-repeat: no-repeat;">
    <div class="container">
        <div class="page-title-content">
            <h2>Services Details</h2>
            <ul>
                <li>
                    <a href="index.html" style="color: black">
                        <i class="bx bx-home"></i>
                        Home
                    </a>
                </li>
                <li class="active">Services Details</li>
            </ul>
        </div>
    </div>
</div>


<section class="services-details-area pt-100 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="services-details-content">
                    <div class="services-content">
                        <h2>@Html.DisplayFor(modelItem => Model.Service.Title)</h2>

                        <div class="services-details-one">
                            <img src="~/assets/img/services/@Model.Service.Image" alt="Image">
                        </div>
                    </div>

                    <div class="services-content">
                        <p>
                            <b>Price: $ </b>

                            @if (Model.Service.PromotionPrice == null)
                            {
                                @Html.DisplayFor(modelItem => Model.Service.Price)

                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => Model.Service.PromotionPrice)

                                <span style="text-decoration-line: line-through; font-size: 75%">
                                    $ @Html.DisplayFor(modelItem => Model.Service.Price)
                                </span>
                            }
                        </p>
                    </div>

                    <div class="services-content">
                        <b>Description: </b>
                        @Html.DisplayFor(modelItem => Model.Service.Description)
                    </div>
                    <div class="btnShare">
                        <!-- Your share button code -->
                        <div class="fb-share-button"
                             data-href="window.location.href"
                             data-layout="button_count">
                        </div>

                        <div class="zalo-share-button"
                             data-href=""
                             data-oaid="579745863508352884"
                             data-layout="1"
                             data-color="blue"
                             data-customize="false">
                        </div>
                    </div>

                    <div class="related-post">
                        <div class="title">
                            <h2>Related Posts</h2>
                        </div>
                        <div class="row">
                            @foreach (var item in Model.Services.Take(3))
                            {
                                <div class="col-lg-4 col-sm-6">
                                    <div class="single-services">
                                        <div class="services-img">
                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                <img src="~/assets/img/services/@item.Image" alt="Image" style="height:15rem; width:17rem">
                                            </a>
                                        </div>
                                        <div class="services-content">
                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="services-sidebar">
                    <div class="services-category">
                        <ul>
                            @foreach (var item in Model.Services)
                            {
                                <li>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Title)
                                        <i class="bx bx-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="services-contact mb-30">
                        <h3>Contact us to do your new projects</h3>
                        <a asp-controller="Contacts" asp-action="Index" class="default-btn">
                            <span>Contact Us</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>