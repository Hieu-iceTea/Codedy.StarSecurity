</section>


<section class="services-area pt-100 pb-70">
    <div class="container">
        <div class="section-title">
            <span>Security Services</span>
            <h2>You Can Protect Your Organization’s Cybersecurity By Services Us</h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Services)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="single-services">
                        <div class="services-img">
                            <a asp-controller="Service" asp-action="Details" asp-route-id="@item.Id">
                                <img src="~/assets/img/services/@item.Image" style="height:15rem; width:18rem" alt="Image">
                            </a>
                        </div>
                        <div class="services-content">
                            <h3><a href="services-details.html">@item.Title</a></h3>
                            <div class="content">
                                <p class="text-limited">@item.Description</p>
                                <a asp-controller="Service" asp-action="Details" asp-route-id="@item.Id" class="read-more">
                                    Read More
                                    <i class="flaticon-right-arrow"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</section>



