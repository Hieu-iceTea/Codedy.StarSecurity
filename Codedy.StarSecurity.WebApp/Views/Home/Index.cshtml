<section class="blog-area pb-70">
    <div class="container">
        <div class="section-title">
            <span>Latest News</span>
            <h2>Recruitment</h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Careers.Take(6))
            {
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog">
                        <div class="blog-img">
                            <a asp-controller="Career" asp-action="Details" asp-route-id="@item.Id">
                                <img src="~/assets/img/career/@item.Image" alt="Image" style="height:15rem">
                            </a>
                        </div>
                        <div class="blog-content">
                            <span>@String.Format("{0:dd/MM/yyyy}", item.CreatedAt)</span>
                            <h3><a  asp-controller="Career" asp-action="Details" asp-route-id="@item.Id">
                                       @Html.DisplayFor(modelItem => item.Title)</a></h3>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>



