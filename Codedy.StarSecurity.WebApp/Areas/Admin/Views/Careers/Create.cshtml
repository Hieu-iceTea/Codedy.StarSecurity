@model Codedy.StarSecurity.WebApp.Models.Database.Entities.Career

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<main>
    <div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
        <div class="container-fluid">
            <div class="page-header-content">
                <h1 class="page-header-title">
                    <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                    <span>Career</span>
                </h1>
                <div class="page-header-subtitle">Company recruitment information</div>
            </div>
        </div>
    </div>
    <div class="container mt-n10">
        <div class="row">
            <div class="col-lg-12">
                <div id="default">
                    <div class="card mb-4">
                        <div class="card-header">Create</div>
                        <div class="card-body">
                            <div class="sbp-preview">
                                <div class="sbp-preview-content">
                                    <form id="formCareer" asp-action="Create" enctype="multipart/form-data">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label class="control-label">Image<span class="text-danger">*</span></label>
                                            </div>
                                            <div class="col-12">
                                                <img id="thumbnail" style="cursor: pointer; height: 200px;" 
                                                     data-toggle="tooltip" title="Click to change the image" data-placement="bottom"
                                                     src="~/Image/icon/upload_select.png" alt="" />

                                                <input id="image" onchange="changeImg(this)" style="display: none;"
                                                       asp-for="ImageFile" accept="image/*" />

                                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Title" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input id="txtTitle" asp-for="Title" class="form-control" />
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Salary" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input id="txtSalary" asp-for="Salary" class="form-control" />
                                                <span asp-validation-for="Salary" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="WorkAddress" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input id="txtWorkAddress" asp-for="WorkAddress" class="form-control" />
                                                <span asp-validation-for="WorkAddress" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Description" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                @*<input id="txtDescription" asp-for="Description" class="form-control" />*@
                                                <textarea asp-for="Description" class="form-control"></textarea>
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-12">
                                                <input id="txtExpirationDate" asp-for="ExpirationDate" value="@DateTime.Now" type="hidden" class="form-control" />
                                                <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-3 ml-2">
                                                <input type="submit" value="Create" class="btn btn-primary form-control text-white" />
                                            </div>
                                            <div class="col-3">
                                                <a asp-action="Index" id="btnBack" onclick="Debug()" class="btn btn-success form-control">Back to List</a>
                                            </div>
                                        </div>
                                    </form>
                                    <script>
                                        CKEDITOR.replace('Description');
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    function validateForm() {
        $('#formCareer').validate({
            rules: {
                txtTitle: {
                    required: true,
                },
                txtSalary: {
                    required: true,
                },
                txtDescription: {
                    required: true,
                },
                txtWorkAddress: {
                    required: true,
                },
                txtExpirationDate: {
                    required: true,
                }
            },
            messages: {
                txtTitle: {
                    required: "Please enter the information field!",
                },
                txtSalary: {
                    required: "Please enter the information field!",
                },
                txtWorkAddress: {
                    required: "Please enter the information field!",
                },
                txtExpirationDate: {
                    required: "Please enter the information field!",
                },
                txtDescription: {
                    required: "Please enter the information field!"
                }
            }
        });
    }
</script>