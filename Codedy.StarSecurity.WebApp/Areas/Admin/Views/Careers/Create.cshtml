@model Codedy.StarSecurity.WebApp.Models.Database.Entities.Career

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<main>
    <div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
        <div class="container-fluid">
            <div class="page-header-content">
                <h1 class="page-header-title">
                    <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                    <span>Career</span>
                </h1>
                <div class="page-header-subtitle">Company recruitment information</div>
            </div>
        </div>
    </div>
    <div class="container mt-n10">
        <div class="row">
            <div class="col-lg-12">
                <div id="default">
                    <div class="card mb-4">
                        <div class="card-header">Create</div>
                        <div class="card-body">
                            <div class="sbp-preview">
                                <div class="sbp-preview-content">
                                    <form id="formCareer" asp-action="Create" enctype="multipart/form-data" class="needs-validation" novalidate onsubmit="return validate();">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label class="control-label">Image<span class="text-danger">*</span></label>
                                            </div>
                                            <div class="col-12">
                                                <img id="thumbnail" style="cursor: pointer; height: 200px;"
                                                     data-toggle="tooltip" title="Click to change the image" data-placement="bottom"
                                                     src="~/Image/icon/upload_select.png" alt="" />

                                                <input id="image" onchange="changeImg(this)" style="display: none;"
                                                       asp-for="ImageFile" accept="image/*" required />
                                                <div class="invalid-feedback">
                                                    Please change the Image
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Title" class="control-label"></label><span class="text-danger">*</span>
                                            </div>
                                            <div class="col-12">
                                                <input id="txtTitle" asp-for="Title" class="form-control" required />
                                                <span class="invalid-feedback">
                                                    Please enter the Title
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Salary" class="control-label"></label><span class="text-danger">*</span>
                                            </div>
                                            <div class="col-12">
                                                <input id="txtSalary" asp-for="Salary" class="form-control" required />
                                                <div class="invalid-feedback">
                                                    Please enter the Salary
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label class="control-label">Work Address</label><span class="text-danger">*</span>
                                            </div>
                                            <div class="col-12">
                                                <input id="txtWorkAddress" asp-for="WorkAddress" class="form-control" required />
                                                <div class="invalid-feedback">
                                                    Please enter the Work Address
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Description" class="control-label"></label><span class="text-danger">*</span>
                                            </div>
                                            <div class="col-12">
                                                <textarea asp-for="Description" class="form-control" ></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label class="control-label">Expiration Date</label><span class="text-danger">*</span>
                                            </div>
                                            <div class="col-12">
                                                <input id="txtExpirationDate" type="date" asp-for="ExpirationDate" value="@DateTime.Now" class="form-control" required />
                                                <div class="invalid-feedback">
                                                    Please enter the Work Expiration Date
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-12">
                                                <a asp-action="Index" class="ml-3 btn btn-sm btn-outline-danger border-0">
                                                    <span class="btn-icon-wrapper pr-1 opacity-8">
                                                        <i class="fa fa-times fa-w-20"></i>
                                                    </span>
                                                    <span>Cancel</span>
                                                </a>

                                                <button type="submit" class="ml-3 btn btn-sm btn-primary lift text-white">
                                                    <span class="btn-icon-wrapper pr-2 opacity-8">
                                                        <i class="fa fa-download fa-w-20"></i>
                                                    </span>
                                                    <span>Create</span>
                                                </button>
                                            </div>
                                        </div>

                                    </form>
                                    <script>
                                        CKEDITOR.replace('Description');
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>


<script type="text/JavaScript">
    function validate() {

        var get_desc = CKEDITOR.instances['Description'].getData();

        if (get_desc == "") {
            alert("Please Enter partner description");
            document.getElementById("Description").focus();
            document.getElementById("Description").style.borderColor = "#fd00d6";
            return false;
        }

    }
</script>