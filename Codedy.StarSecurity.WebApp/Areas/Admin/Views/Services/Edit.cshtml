@model Codedy.StarSecurity.WebApp.Models.Database.Entities.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
        <div class="container-fluid">
            <div class="page-header-content">
                <h1 class="page-header-title">
                    <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                    <span>Service</span>
                </h1>
                <div class="page-header-subtitle">Enter customer information</div>
            </div>
        </div>
    </div>
    <div class="container mt-n10">
        <div class="row">
            <div class="col-lg-12">
                <div id="default">
                    <div class="card mb-4">
                        <div class="card-header">Default Bootstrap Form Controls</div>
                        <div class="card-body">
                            <div class="sbp-preview">
                                <div class="sbp-preview-content">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Title" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="Title" class="form-control" />
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Description" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="Description" class="form-control" />
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Image" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="Image" class="form-control" />
                                                <span asp-validation-for="Image" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Price" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="Price" class="form-control" />
                                                <span asp-validation-for="Price" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="PromotionPrice" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="PromotionPrice" class="form-control" />
                                                <span asp-validation-for="PromotionPrice" class="text-danger"></span>
                                            </div>
                                        </div>
                                            @*<div class="form-group">
                                                <div class="col-4">
                                                    <label asp-for="IsFeatured" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <select asp-for="IsFeatured" class="form-control"></select>
                                                    <span asp-validation-for="IsFeatured" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-4">
                                                    <label asp-for="IsActive" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="IsActive" class="form-control" />
                                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                                </div>
                                            </div>*@

                                        <p class="form-control">@Html.EditorFor(model => model.IsFeatured)</p>
                                        <p class="form-control">@Html.EditorFor(model => model.IsActive)</p>

                                        <div class="form-group row">
                                            <div class="col-3 ml-2">
                                                <input type="submit" value="Edit" class="btn btn-primary form-control text-white" />
                                            </div>
                                            <div class="col-3">
                                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>