@model Codedy.StarSecurity.WebApp.Models.Database.Entities.Service

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
        <div class="container-fluid">
            <div class="page-header-content">
                <h1 class="page-header-title">
                    <div class="page-header-icon"><i data-feather="activity"></i></div>
                    <span>Services</span>
                </h1>
                <div class="page-header-subtitle">Services that the company provides to customers</div>
            </div>
        </div>
    </div>
    <div class="container mt-n10">
        <div class="row">
            <div class="col-lg-12">
                <div id="default">
                    <div class="card mb-4">
                        <div class="card-header">Edit</div>
                        <div class="card-body col-xl-10 mx-auto">
                            <div class="sbp-preview-content">
                                <form asp-action="Edit" enctype="multipart/form-data" id="formService" class="needs-validation" novalidate >
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Image<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <img id="thumbnail" style="cursor: pointer; height: 200px;"
                                                 data-toggle="tooltip" title="Click to change the image" data-placement="bottom"
                                                 src="~/Image/icon/upload_select.png" alt="" />

                                            <input id="image" onchange="changeImg(this)" style="display: none;"
                                                   asp-for="ImageFile" accept="image/*" required />

                                            <div class="invalid-feedback">
                                                Please change the Image
                                            </div>
                                        </div>
                                    </div>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Title<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <input id="txttitle" asp-for="Title" class="form-control" required />
                                            <span class="invalid-feedback">
                                                Please enter the Title
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Price<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <input id="price" asp-for="Price" class="form-control" required pattern="[0-9]{1,20}"  />
                                            <span class="invalid-feedback">
                                                Please enter the Price
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Promotion Price<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <input id="promotionPrice" asp-for="PromotionPrice" required class="form-control" pattern="[0-9]{1,20}"  />
                                            <span class="invalid-feedback">
                                                Please enter the PromotionPrice
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Description<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <div class="col-4">
                                                <label class="control-label">Active<span class="text-danger">*</span></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="IsActive" checked class="" />
                                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group col-6">
                                            <div class="col-4">
                                                <label class="control-label">Featured<span class="text-danger">*</span></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="IsFeatured" class="" />
                                                <span asp-validation-for="IsFeatured" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            <a asp-action="Index" class="ml-3 btn btn-sm btn-outline-danger border-0">
                                                <span class="btn-icon-wrapper pr-1 opacity-8">
                                                    <i class="fa fa-times fa-w-20"></i>
                                                </span>
                                                <span>Cancel</span>
                                            </a>

                                            <button type="submit" value="Update" class="ml-3 btn btn-sm btn-primary lift text-white">
                                                <span class="btn-icon-wrapper pr-2 opacity-8">
                                                    <i class="fa fa-download fa-w-20"></i>
                                                </span>
                                                <span>Update</span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    CKEDITOR.replace('Description');
</script>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
<script type="text/JavaScript">
    function validate() {

        var get_desc = CKEDITOR.instances['Description'].getData();

        if (get_desc == "") {
            alert("Please Enter partner description");
            document.getElementById("Description").focus();
            document.getElementById("Description").style.borderColor = "#fd00d6";
            return false;
        }

    }