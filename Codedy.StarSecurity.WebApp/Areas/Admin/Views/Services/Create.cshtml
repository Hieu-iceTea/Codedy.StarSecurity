            <label for="image" class="col-md-3 col-form-label">Image</label>
            <div class="col-md-9 col-xl-8">
                <img id="thumbnail" style="height: 200px;cursor: pointer" class=""
                     data-toggle="tooltip" title="Click to change the image" data-placement="bottom"
                     src="~/assets/img/services/upload_select.png"
                     alt="Logo">
                <input id="image" asp-for="ImageFile" accept="image/*" type="file"
                       class="form-control-file" style="display: none;"
