                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Image<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <img id="thumbnail" style="cursor: pointer; height: 200px;"
                                                 data-toggle="tooltip" title="Click to change the image" data-placement="bottom"
                                                 src="~/Image/icon/upload_select.png" alt="" />

                                            <input id="image" onchange="changeImg(this)" style="display: none;"
                                                   asp-for="ImageFile" accept="image/*" />

                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Title<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <input id="txttitle" asp-for="Title" class="form-control" />
                                            <span asp-validation-for="Title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Price<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <input id="price" asp-for="Price" class="form-control" />
                                            <span asp-validation-for="Price" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Promotion Price<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <input id="promotionPrice" asp-for="PromotionPrice" class="form-control" />
                                            <span asp-validation-for="PromotionPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-4">
                                            <label class="control-label">Description<span class="text-danger">*</span></label>
                                        </div>
                                        <div class="col-12">
                                            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <div class="col-4">
                                                <label class="control-label">Active<span class="text-danger">*</span></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="IsActive" checked class="" />
                                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group col-6">
                                            <div class="col-4">
                                                <label class="control-label">Featured<span class="text-danger">*</span></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="IsFeatured" class="" />
                                                <span asp-validation-for="IsFeatured" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            <a asp-action="Index" class="ml-3 btn btn-sm btn-outline-danger border-0">
                                                <span class="btn-icon-wrapper pr-1 opacity-8">
                                                    <i class="fa fa-times fa-w-20"></i>
                                                </span>
                                                <span>Cancel</span>
                                            </a>

                                            <button type="submit" class="ml-3 btn btn-sm btn-primary lift text-white">
                                                <span class="btn-icon-wrapper pr-2 opacity-8">
                                                    <i class="fa fa-download fa-w-20"></i>
                                                </span>
                                                <span>Create</span>
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                <script>
                                    CKEDITOR.replace('Description');
                                </script>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


<script>
    function validateForm() {
        $('#formService').validate({
            rules: {
                image: {
                    required: true,
                },
                txttitle: {
                    required: true,
                },
                description: {
                    required: true,
                },
                price: {
                    required: true,
                },
                PromotionPrice: {
                    required: true,
                }
            },
            messages: {
                image: {
                    required: "Please enter the information field!",
                },
                txttitle: {
                    required: "Please enter the information field!",
                },
                description: {
                    required: "Please enter the information field!",
                },
                price: {
                    required: "Please enter the information field!",
                },
                PromotionPrice: {
                    required: "Please enter the information field!",
                }
            }
        });
    }
</script>