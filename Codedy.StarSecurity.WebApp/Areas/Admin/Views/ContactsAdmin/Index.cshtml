@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
        <div class="container-fluid">
            <div class="page-header-content">
                <h1 class="page-header-title">
                    <div class="page-header-icon"><i data-feather="activity"></i></div>
                    <span>Contact</span>
                </h1>
                <div class="page-header-subtitle"></div>
            </div>
        </div>
    </div>
    <div class="container-fluid mt-n10">
        <div class="card mb-4">
            <div class="card-header">DataTable Example</div>
            <div class="card-body">
                <div class="datatable table-responsive">
                    <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Service Name</th>
                                <th>Email Address</th>
                                <th>Subject</th>
                                <th>Message</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Full Name</th>
                                <th>Service Name</th>
                                <th>Email Address</th>
                                <th>Subject</th>
                                <th>Message</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                   @item.FullName
                                </td>
                                <td>
                                   @item.NameService
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                   @item.Subject
                                </td>
                                <td>
                                    @item.Message
                                </td>
                                <td>
                                    @if (item.Status == Status.Request)
                                    {
                                        <div class="badge badge-danger badge-warning">Request</div>
                                    }
                                    else if (item.Status == Status.Used)
                                    {
                                        <div class="badge badge-success badge-pill">Used</div>
                                    }
                                    else
                                    {
                                        <div class="badge badge-warning badge-pill">Using</div>
                                    }
                                </td>

                                <td>
                                    <a asp-action="Edit" asp-controller="ContactsAdmin" asp-route-id="@item.ID" class="btn btn-datatable btn-icon btn-transparent-dark lift-sm"><i data-feather="edit" class="text-warning"></i></a>
                                    <form asp-action="Delete" asp-controller="ContactsAdmin" class="d-inline-block">
                                        <input type="hidden" value="@item.ID" name="Id" />
                                        <button type="submit" class="btn btn-datatable btn-icon btn-transparent-dark lift-sm"
                                                onclick="return confirm('Confirm delete?')">
                                            <span class="btn-icon-wrapper pr-2 opacity-8">
                                                <i data-feather="trash-2" class="text-danger"></i>
                                            </span>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>