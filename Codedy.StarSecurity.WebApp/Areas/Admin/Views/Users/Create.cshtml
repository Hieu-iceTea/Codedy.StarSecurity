@model Codedy.StarSecurity.WebApp.Models.Database.Entities.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="page-header pb-10 page-header-dark bg-gradient-primary-to-secondary">
        <div class="container-fluid">
            <div class="page-header-content">
                <h1 class="page-header-title">
                    <div class="page-header-icon"><i data-feather="edit-3"></i></div>
                    <span>User</span>
                </h1>
                <div class="page-header-subtitle">System user information</div>
            </div>
        </div>
    </div>
    <div class="container mt-n10">
        <div class="row">
            <div class="col-lg-12">
                <div id="default">
                    <div class="card mb-4">
                        <div class="card-header">Create</div>
                        <div class="card-body">
                            <div class="sbp-preview">
                                <div class="sbp-preview-content">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="FirtName" class="control-label"></label>(<span class="text-danger">*</span>)
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="FirtName" class="form-control" />
                                                    <span asp-validation-for="FirtName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="LastName" class="control-label"></label>(<span class="text-danger">*</span>)
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="LastName" class="form-control" />
                                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="UserName" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="UserName" class="form-control" />
                                                <span asp-validation-for="UserName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Password" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="Password" type="password" class="form-control" />
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="PasswordHash" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="PasswordHash" type="password" class="form-control" />
                                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="Email" class="control-label"></label>(<span class="text-danger">*</span>)
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="Email" class="form-control" />
                                                    <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="Phone" class="control-label"></label>(<span class="text-danger">*</span>)
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="Phone" class="form-control" />
                                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="Address" class="control-label"></label>(<span class="text-danger">*</span>)
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="Address" class="form-control" />
                                                <span asp-validation-for="Address" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="Gender" class="control-label"></label>(<span class="text-danger">*</span>)
                                                </div>
                                                <div class="col-12">
                                                    <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="DOB" class="control-label"></label>(<span class="text-danger">*</span>)
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="DOB" type="date" class="form-control" />
                                                    <span asp-validation-for="DOB" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-4">
                                                <div class="col-4">
                                                    <label asp-for="EmployeeEducationalQualification" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="EmployeeEducationalQualification" class="form-control" />
                                                    <span asp-validation-for="EmployeeEducationalQualification" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-4">
                                                <div class="col-4">
                                                    <label asp-for="EmployeeCode" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="EmployeeCode" class="form-control" />
                                                    <span asp-validation-for="EmployeeCode" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-4">
                                                <div class="col-4">
                                                    <label asp-for="EmployeeDepartment" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="EmployeeDepartment" class="form-control" />
                                                    <span asp-validation-for="EmployeeDepartment" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="EmployeeRole" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="EmployeeRole" class="form-control" />
                                                    <span asp-validation-for="EmployeeRole" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-group col-6">
                                                <div class="col-4">
                                                    <label asp-for="EmployeeGrade" class="control-label"></label>
                                                </div>
                                                <div class="col-12">
                                                    <input asp-for="EmployeeGrade" class="form-control" />
                                                    <span asp-validation-for="EmployeeGrade" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="EmployeeAchievements" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="EmployeeAchievements" class="form-control" />
                                                <span asp-validation-for="EmployeeAchievements" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-4">
                                                <label asp-for="LastLoginDate" class="control-label"></label>
                                            </div>
                                            <div class="col-12">
                                                <input asp-for="LastLoginDate" type="date" class="form-control" />
                                                <span asp-validation-for="LastLoginDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        @*<div class="form-group row">
                                            <div class="col-3 ml-2">
                                                <input type="submit" value="Create" class="btn btn-primary form-control text-white" />
                                            </div>
                                            <div class="col-3">
                                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                                            </div>
                                        </div>*@
                                        <div class="form-group row">
                                            <div class="col-12">
                                                <a asp-action="Index" class="ml-3 btn btn-sm btn-outline-danger border-0">
                                                    <span class="btn-icon-wrapper pr-1 opacity-8">
                                                        <i class="fa fa-times fa-w-20"></i>
                                                    </span>
                                                    <span>Cancel</span>
                                                </a>

                                                <button type="submit" class="ml-3 btn btn-sm btn-primary lift text-white">
                                                    <span class="btn-icon-wrapper pr-2 opacity-8">
                                                        <i class="fa fa-download fa-w-20"></i>
                                                    </span>
                                                    <span>Create</span>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>